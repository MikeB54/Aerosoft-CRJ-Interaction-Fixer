<Template Name = "ASCRJ_Knob_Infinite_Push_Template">
	<DefaultTemplateParameters>
		<CLOCKWISE_CONDITION>1</CLOCKWISE_CONDITION>
		<ANTICLOCKWISE_CONDITION>1</ANTICLOCKWISE_CONDITION>
		<KNOB_CHANGE_NAME>#KNOB_ANIM_NAME#_CHANGE</KNOB_CHANGE_NAME>
		<PUSH_NAME>#PUSH_ANIM_NAME#</PUSH_NAME>
		<KNOB_WWISE_EVENT>AMB_Knob_Turn</KNOB_WWISE_EVENT>
		<PUSH_WWISE_EVENT>AMB_Switch_Off</PUSH_WWISE_EVENT>
		<COUNT>36</COUNT>
		<DIRECTION>Both</DIRECTION>
		<ACTION>Play</ACTION>
		<ANIM_LENGTH_PUSH>10</ANIM_LENGTH_PUSH>
		<CENTER_RADIUS>0.005</CENTER_RADIUS>
	</DefaultTemplateParameters>
	<UseTemplate Name="ASOBO_GT_Knob_Infinite_Push">
		<PART_ID>#NODE_ID#_PART</PART_ID>
		<ANIM_NAME_PUSH>#PUSH_ANIM_NAME#</ANIM_NAME_PUSH>
		<ANIM_NAME_KNOB>#KNOB_ANIM_NAME#</ANIM_NAME_KNOB>
		<WWISE_EVENT>#KNOB_WWISE_EVENT#</WWISE_EVENT>
		<WWISE_EVENT_1>#PUSH_WWISE_EVENT#</WWISE_EVENT_1>
		<NORMALIZED_TIME_1>0.1</NORMALIZED_TIME_1>
		<WWISE_EVENT_2>#PUSH_WWISE_EVENT#</WWISE_EVENT_2>
		<NORMALIZED_TIME_2>0.5</NORMALIZED_TIME_2>
		<CLOCKWISE_CODE>
			#CLOCKWISE_CONDITION# if{
			(L:#KNOB_CHANGE_NAME#, Number) ++ (&gt;L:#KNOB_CHANGE_NAME#)
			}
		</CLOCKWISE_CODE>
		<ANTICLOCKWISE_CODE>
			#ANTICLOCKWISE_CONDITION# if{
			(L:#KNOB_CHANGE_NAME#, Number) -- (&gt;L:#KNOB_CHANGE_NAME#)
			}
		</ANTICLOCKWISE_CODE>
		<LEFT_SINGLE_CODE>1 (&gt;L:#PUSH_NAME#)</LEFT_SINGLE_CODE>
	</UseTemplate>
</Template>